{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2018", "esnext.asynciterable"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true
